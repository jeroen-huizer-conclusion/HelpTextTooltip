<?xml version="1.0" encoding="utf-8" ?>
<widget id="HelpTextTooltip.widget.HelpTextByXPath" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ widget.xsd">
    <name>HelpText by XPath</name>
    <description>Add an info-icon and configure the tooltip.</description>
    <icon></icon>
    <properties>

        <property key="helpEntity" type="entity">
            <caption>Help entity</caption>
            <category>Basic</category>
            <description>The entity that contains the helptext.</description>
        </property>

        <property key="keyConstraint" type="entityConstraint" entityProperty="helpEntity">
            <caption>Constraint</caption>
            <category>Basic</category>
            <description>Define which helptext to retrieve.</description>
        </property>

        <property key="helpAttribute" type="attribute" entityProperty="helpEntity">
            <caption>Help attribute</caption>
            <category>Basic</category>
            <description>Contains the text to be displayed</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>        

        <property key="displayIcon" type="boolean" defaultValue="true">
            <caption>Show icon</caption>
            <category>Basic</category>
            <description>Show a 'help' icon.</description>
        </property>

    </properties>
</widget>
